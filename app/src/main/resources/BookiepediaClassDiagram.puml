        package assets {

            class League {
                - leagueId : String
                - leagueName : String
                - seasonStatusId : String
                - seasonStatus : String
                - seasonYear : String
                - leagueLogo : String

                + getField() : Object
                + setField(value : String) : void
            }

            class Team {
                - leagueId : String
