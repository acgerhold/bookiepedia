            - teamAway : String
            - eventStatusId : String
            - eventStatus : String
            - teamWinner : String
            - scoreHome : Integer
            - scoreAway : Integer
            - scoreTotal : Integer
            - links : List<String>

            + getField() : Object
            + setField(value : String) : void
        }

        class Schedule {
            - scheduleId : String
